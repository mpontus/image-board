{
  "name": "server",
  "version": "1.0.0",
  "description": "Image Board Server",
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "lint": "tslint -c tslint.json '**/*.ts'",
    "test": "better-npm-run test"
  },
  "betterScripts": {
    "test": {
      "command": "jest --runInBand",
      "env": {
        "CLOUDINARY_STUB": 1,
        "JWT_SECRET": "secret",
        "MONGODB_URL": "mongodb://localhost:27017/image-board-test"
      }
    }
  },
  "author": "Mikhail Pontus",
  "license": "MIT",
  "dependencies": {
    "cloudinary": "^1.11.0",
    "cors": "^2.8.4",
    "dotenv-safe": "^6.0.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-paginate": "^1.0.0",
    "jsonwebtoken": "^8.3.0",
    "jwks-rsa": "^1.3.0",
    "mongoose": "^5.2.9",
    "multer": "^1.3.1",
    "multer-storage-cloudinary": "^2.2.1",
    "shortid": "^2.2.13",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv-safe": "^5.0.0",
    "@types/express-paginate": "^1.0.0",
    "@types/faker": "^4.1.4",
    "@types/jest": "^23.3.2",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mongodb": "^3.1.7",
    "@types/mongoose": "^5.2.13",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/shortid": "^0.0.29",
    "@types/supertest": "^2.0.6",
    "better-npm-run": "^0.1.1",
    "faker": "^4.1.0",
    "jest": "^23.6.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@test/(.*)": "<rootDir>/test/$1",
      "@src/(.*)": "<rootDir>/src/$1"
    }
  }
}
